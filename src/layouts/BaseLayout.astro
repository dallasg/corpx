---
// src/layouts/BaseLayout.astro
import '../styles/global.css'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import logoLight from '../assets/logo-light.svg'
import logoDark from '../assets/logo-dark.svg'

const { title = "CorpX Technologies" } = Astro.props;
---

<html lang="en" class="dark:bg-gray-900 dark:text-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <body class="flex flex-col min-h-screen bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-100 transition-colors">
    <Header />

    <main class="flex-1 container mx-auto px-6 pt-12">
      <slot />
    </main>

    <Footer />
  </body>
</html>
