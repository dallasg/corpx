<section class="bg-gray-50 p-8 rounded-md shadow-md max-w-2xl mx-auto my-12">
  <h2 class="text-2xl font-bold text-center mb-6">Apply to CorpX</h2>
  <form action="/thank-you" method="GET" class="space-y-6">
    <div>
      <label for="name" class="block mb-2 font-semibold">Full Name</label>
      <input type="text" id="name" name="name" class="w-full border border-gray-300 p-3 rounded-md" placeholder="Enter your name" required />
    </div>

    <div>
      <label for="email" class="block mb-2 font-semibold">Email Address</label>
      <input type="email" id="email" name="email" class="w-full border border-gray-300 p-3 rounded-md" placeholder="you@example.com" required />
    </div>

    <div>
      <label for="position" class="block mb-2 font-semibold">Position Applying For</label>
      <select id="position" name="position" class="w-full border border-gray-300 p-3 rounded-md" required>
        <option value="">Select a position</option>
        <option>Software Developer (Feature Factory Technician)</option>
        <option>Senior Legacy Archeologist</option>
        <option>Frontend Developer (CSS Janitor)</option>
        <option>DevOps Engineer (Silo Diplomat)</option>
      </select>
    </div>

    <div class="text-center">
      <button type="submit" class="bg-blue-900 text-white px-6 py-3 rounded-md font-semibold hover:bg-blue-700 transition">
        Submit Application
      </button>
    </div>
  </form>
</section>
